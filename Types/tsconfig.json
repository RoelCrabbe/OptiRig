{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "isolatedModules": false,
        "noEmit": false,
        "emitDeclarationOnly": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
